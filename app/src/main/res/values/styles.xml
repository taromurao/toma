<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/base02</item>
        <item name="android:navigationBarColor">@color/base03</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:colorForeground">@color/textColorSecondary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondary</item>
        <item name="android:editTextColor">@color/textColorSecondary</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="SettingsLabelText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="SettingsEditText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:inputType">time</item>
        <item name="android:ems">3</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="ClockText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base3</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="ClockMinuteText" parent="ClockText">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="ClockSecondText" parent="ClockText">
        <item name="android:textSize">30sp</item>
    </style>
</resources>
